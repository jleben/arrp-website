extends ../main.pug

block page

  #playground

    script(src=base_url+'/js/play.js')

    .column(style="flex: 2")

        div.toolbar
          button(onclick='sendArrpInput()', style='margin-right: 10pt') Run

        textarea(id='arrp-code' rows='10' maxlength='5000', style="flex: 1",
                 placeholder='Enter code here.').
          input x :: [~]real64;

          main = x * 2 + 1;

    .column(style="flex: 1")

        div.toolbar
          label(for='arrp-input') Input:

        textarea(id='arrp-input' rows='10', style="flex: 1",
                 placeholder="If the code declares an input, you can provide its values here. Separate array elements by spaces or line breaks.")

        div.toolbar
          label(for='arrp-output') Output:

        textarea(readonly id='arrp-output' rows='10', style="flex: 1",
                 placeholder="Output will appear here.")
