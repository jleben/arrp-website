extends ../main.pug

block page

  #playground

    script(src=base_url+'/js/play.js')

    .column

        select(id='example-selection' onchange='selectExample()')

        button(onclick='selectExample()') Reload

        textarea(id='arrp-code' rows='10' maxlength='5000', style="flex: 1")

    .column

        p Input:

        textarea(id='arrp-input' rows='10', style="flex: 1")

        p
          button(onclick='sendArrpInput()') Run
          input(id='out-count' type='text' value='50' size='4' maxlength='4' style='text-align: right')
          | samples

        p Output:

        textarea(readonly id='arrp-output' rows='10', style="flex: 1") Output will appear here.

